<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3303/social?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">social</property>
    <property name="hibernate.connection.password">1111</property>
     
        <mapping class="com.mycompany.socialapp.Comment" />
        <mapping class="com.mycompany.socialapp.Post" />
        <mapping class="com.mycompany.socialapp.Replay" />
        <mapping class="com.mycompany.socialapp.User" />
  </session-factory>
</hibernate-configuration>
